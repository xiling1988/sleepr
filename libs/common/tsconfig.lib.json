//This file extends the root tsconfig.json file and adds the configuration for the library project.
//It specifies the output directory for the compiled files and the declaration option to generate the type definition files.

{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "outDir": "../../dist/libs/common"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test", "**/*spec.ts"]
}
